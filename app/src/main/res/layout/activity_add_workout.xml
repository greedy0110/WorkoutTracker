<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="viewModel" type="com.develop.greedy0110.workouttracker.viewModel.AddWorkoutViewModel"/>
    </data>
    <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".ui.AddWorkoutActivity">

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:onTextChanged='@{(s,start,end,before) -> viewModel.input.name(s.toString ?? "")}'
                android:id="@+id/workoutName" android:hint="운동 이름"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:onTextChanged='@{(s,start,end,before) -> viewModel.input.target(s.toString ?? "")}'
                android:id="@+id/targetName" android:hint="운동 타겟 부위"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:onTextChanged='@{(s,start,end,before) -> viewModel.input.weight(s.toString ?? "0")}'
                android:id="@+id/weightText" android:hint="중량"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:onTextChanged='@{(s,start,end,before) -> viewModel.input.rep(s.toString ?? "0")}'
                android:id="@+id/repText" android:hint="횟수"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:onTextChanged='@{(s,start,end,before) -> viewModel.input.restTime(s.toString ?? "0")}'
                android:id="@+id/restTextorEmpty" android:hint="쉬는 시간 (선택적)"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:onTextChanged='@{(s,start,end,before) -> viewModel.input.memo(s.toString ?? "")}'
                android:id="@+id/memoText" android:hint="메모"/>
        <Button
                android:text="@string/add_workout_button"
                android:layout_width="match_parent"
                android:onClick='@{(v)->viewModel.input.clickAddButton()}'
                android:layout_height="wrap_content" android:id="@+id/button"/>
    </LinearLayout>
</layout>